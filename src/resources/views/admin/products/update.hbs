

    <div class="app-title">
      <ul class="app-breadcrumb breadcrumb">
        <li class="breadcrumb-item">Danh sách sản phẩm</li>
        <li class="breadcrumb-item"><a href="#">Thêm sản phẩm</a></li>
      </ul>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="tile">
          <h3 class="tile-title">Tạo mới sản phẩm</h3>
          <div class="tile-body">
            <form class="row" method="post" action="/admin/products/edit-product?id={{data.product.id}}&_method=PUT" enctype="multipart/form-data">
              <div class="form-group col-md-3">
                <label class="control-label">Mã sản phẩm </label>
                <input disabled="true" class="form-control" type="number" placeholder="" value="{{data.product.id}}">
              </div>
              <div class="form-group col-md-3">
                <label class="control-label">Tên sản phẩm</label>
                <input name="name" class="form-control" type="text" value="{{data.product.name}}">
              </div>
              <div class="form-group col-md-3">
                <label class="control-label">Size</label>
                <input name="size" class="form-control" type="text" value="{{data.product.size}}">
              </div>
              <div class="form-group col-md-3">
                <label class="control-label">Màu</label>
                <input name="color" class="form-control" type="text" value="{{data.product.color}}">
              </div>
              <div class="form-group  col-md-3">
                <label class="control-label">Số lượng</label>
                <input name="amout" class="form-control" type="number" value="{{data.product.amout}}">
              </div>
              <div class="form-group col-md-3">
                <label for="exampleSelect1" class="control-label">Danh mục</label>
                    <select name="category" class="form-select" id="exampleSelect1">
                   <option value="{{data.product.categories.id}}">{{data.product.categories.name}}</option>
                   {{#each data.categories}}
                   <option  value="{{this.id}}">{{this.name}}</option>
                    {{/each}}
                    </select>
              </div>
        
              <div class="form-group col-md-3">
                <label class="control-label">Mô tả</label>
                <input name="desciption" class="form-control" type="textarea" value="{{data.product.desciption}}">
              </div>
              <div class="form-group col-md-3">
                <label class="control-label">Giá bán</label>
                <input name="price" class="form-control" type="text" value="{{data.product.price}}">
              </div>
                <div id="myfileupload">
                  <input type="file" id="uploadfile" name="imgUpload" onchange="readURL(this);" value="{{data.product.img}}" />
                </div>
                <div id="thumbbox">
                  <img height="450" width="400" alt="Thumb image" id="thumbimage" style="display: none" />
                  <a class="removeimg" href="javascript:"></a>
                </div>
                {{!-- <div id="boxchoice">
                  <a href="javascript:" class="Choicefile"><i class="fas fa-cloud-upload-alt"></i> Chọn ảnh</a>
                  <p style="clear:both"></p>
                </div> --}}
              </div>
          </div>
          <button class="btn btn-save" type="submit">Lưu lại</button>
          <a class="btn btn-cancel" href="/admin/products">Hủy bỏ</a>
        </div>




